<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css"
        integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link rel="stylesheet" href="/style.css">

    <title>Hello, world!</title>
</head>

<body>
    <div class="page-wrapper chiller-theme toggled">
        <a id="show-sidebar" class="btn btn-sm btn-dark" href="#">
            <i class="fas fa-bars"></i>
        </a>
        {{>sidebar}}

        <main class="page-content">
            <div class="container d-flex justify-content-center">
                <div id="wrap-width">
                    <form id="resetName" autocomplete="off">
                        <div class="card-header">
                            <h3>Change your profil name</h3>
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <input name ="newMail" type="name" required class="form-control" placeholder="{{name}}">
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Send" class="btn float-right login_btn">
                        </div> <br> <br>
                    </form>
                    <form id="resetMail" autocomplete="off"> 
                        <div class="card-header">
                            <h3>Change your email</h3>
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-at"></i></span>
                            </div>
                            <input type="email" required class="form-control" placeholder="{{email}}">
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <input type="password" required class="form-control" placeholder="password">
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Send" class="btn float-right login_btn">
                        </div> <br> <br>
                    </form> 
                    <form id="resetPassword" autocomplete="off">  
                        <div class="card-header">
                            <h3>Reset password</h3> <br>
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <input type="password" required class="form-control" placeholder="Current password">
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <input type="password" required class="form-control" placeholder="New password">
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-check"></i></span>
                            </div>
                            <input type="password" required class="form-control" placeholder="Verify password">
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Send" class="btn float-right login_btn">
                        </div>
                    </form>
                </div>
            </div>

             <div class="container">
                <!-- The Modal -->
                <div class="modal" id="myModal">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <!-- Modal Header -->
                            <div class="modal-header d-flex justify-content-end">
                                <button type="button" class="clos" data-dismiss="modal">&times;</button>
                            </div>
                            <!-- Modal body -->
                            <div class="modal-body">
                            </div>
                        </div>
                    </div>
                </div>
            </div>



        </main>
    </div>

    {{>jsLinks}}
    <script src="/js/credentials.js"></script>
</body>

</html>