<!doctype html>
<html lang="en">

<head>
    {{>head}}
    <link rel="stylesheet" href="/task.css">
    <title>Hello, world!</title>
</head>

<body>
    <div class="page-wrapper chiller-theme toggled">
        <a id="show-sidebar" class="btn btn-sm btn-dark" href="#">
            <i class="fas fa-bars"></i>
        </a>

        {{>sidebar}}

        <main class="page-content">
            <div class="container d-flex justify-content-center">
                <div class="opacity" id="wrap-width">
                    <div class="card-body">
                        <form>
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-plus"></i></span>
                                </div>
                                <input type="text" id ="inputNewTask" required class="form-control" placeholder="add a new task">
                            </div>
                            <div class="form-group d-flex justify-content-between ">
                                <a href='#' id ="submitNewTask" class="btn login_btn"> 
                                    <span> <i class="fas fa-paper-plane"> </i> </span>
                                    Send </a>
                                <a href='/me'  class="btn login_btn">
                                    <span> <i class="fas fa-undo-alt"></i> </span>
                                     View your tasks </a>
                            </div>
                        </form>
                        <div>
                            <p id="validationMessage">Your task has been successfully uploaded !</p>
                        </div>
                        <div>
                            <p id="errorMessage">Error, we are not able to send your task...</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="container">

                <!-- The Modal -->
                <div class="modal" id="myModal">
                    <div class="modal-dialog">
                        <div class="modal-content">

                            <!-- Modal Header -->
                            <div class="modal-header d-flex justify-content-end">

                                <button type="button" class="clos" data-dismiss="modal">&times;</button>
                            </div>

                            <!-- Modal body -->
                            <div class="modal-body">
                            </div>


                        </div>
                    </div>
                </div>

            </div>

        </main>
    </div>


    {{>jsLinks}}
    <script src="/js/addTask.js"></script>
  
</body>

</html>